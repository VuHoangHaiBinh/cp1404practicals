BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_number
            text: ''
            font_size: 48
            multiline: False
            on_text: app.handle_conversion()
        BoxLayout:
            Button:
                text: 'Up'
                on_press: app.handle_increment(input_number.text, 1)
            Button:
                text: 'Down'
                on_press: app.handle_increment(input_number.text, -1)
    #Button:
        #text: 'Convert miles to km'
        #on_press: app.handle_conversion()
    Label:
        id: output_label
        text: app.output_text
